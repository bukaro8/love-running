---
import { Icon } from 'astro-icon/components';
import { iconsList } from '../assets/constants';
---

<footer class='w-screen flex-in-full fixed bottom-0 bg-white min-h-fit h-[7vh]'>
	<div
		class='flex justify-around w-full flex-wrap text-5xl text-[clamp(1rem, 10vw, 3rem)] max-text-5xl sm:text-5xl'
	>
		{
			iconsList.map((el) => (
				<a
					class={`p-2 ${el.class} `}
					href={el.link}
					target='_blank'
					rel='noopener'
					aria-label={`Visit our ${el.name} page. (Opens in a new tab)`}
				>
					<Icon name={el.name} />
				</a>
			))
		}
	</div>
</footer>
